{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <style>
        .register_site { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .register_site code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="register_site">
        <h1>Please submit data for registration.</h1>
        {{ form_start(registerForm) }}
        {{ form_row(registerForm.login) }}
        {{ form_row(registerForm.email) }}
        {{ form_row(registerForm.password) }}

        <button type="submit">Register</button>

        {{ form_end(registerForm) }}
    </div>
{% endblock %}