{% extends 'base.html.twig' %}

{% block title %}Hello DefaultController!{% endblock %}

{% block body %}
    <style>
        .login_site { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .login_site code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="login_site">
        <h1>Hello, please submit your username and password</h1>
        {{ form_start(form) }}
        {{ form_row(form.login) }}
        {{ form_row(form.password) }}
        <button type="submit">Login</button>
        <a href="{{ path('app_register') }}" type="button">Register</a>
        {{ form_end(form) }}

    </div>
{% endblock %}