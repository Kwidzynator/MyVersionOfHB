{% extends 'base.html.twig' %}

{% block title %}Welcome!{% endblock %}

{% block body %}
    <style>
        .words_site {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font: 18px/1.5 sans-serif;
            text-align: center;
        }
        .words_site code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .words_site h1, .words_site h2, .words_site h3 {
            margin: 10px 0;
        }
        .words_site button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }

        /* Styl dla #game-panel */
        #game-panel {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font: 18px/1.5 sans-serif;
            text-align: center;
        }
        #game-panel h1 {
            margin: 20px 0;
        }
        #game-panel button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 18px;
            cursor: pointer;
        }
    </style>

    <div class="words_site" id="content">
        <h1>RULES</h1>
        <h2>Rules are simple: The words will appear on screen<br>
            If you think that word has already appeared press "seen" otherwise press "new"</h2>
        <h3>press "ready" button to start</h3>
        <button id="ready-button">ready</button>
    </div>

    <div id="game-panel" style="display: none;">
        <h1 id="word-display">...</h1>
        <div id="health-display">
            Lives left: <span id="health-left"> 3 </span>
        </div>
        <button id="seen-button">Seen</button>
        <button id="new-button">New</button>
    </div>

    <script>
        document.getElementById('ready-button').addEventListener('click', function() {
            document.getElementById('content').style.display = 'none';
            document.getElementById('game-panel').style.display = 'block';
            loadNextWord();
            fetch('/check_health')
                .then(response => response.json())
                .then(data => {
                    updateHealthDisplay(data.health);
                });
        });

        document.getElementById('seen-button').addEventListener('click', function() {
            fetch('/seen')
                .then(response => response.json())
                .then(data => {
                    if (data.correct) {
                        loadNextWord();
                    } else {
                        fetch('/set_health')
                            .then(response => response.json())
                            .then(data => {
                                updateHealthDisplay(data.health);
                                if (data.status === 'game_over') {
                                    alert("Game Over! You lost.");

                                } else {
                                    alert("Wrong! You lost one life.");
                                }
                            });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("An error occurred, please try again.");
                });
        });

        document.getElementById('new-button').addEventListener('click', function() {
            fetch('/seen')
                .then(response => response.json())
                .then(data => {
                    if (!data.correct) {
                        loadNextWord();
                    } else {
                        fetch('/set_health')
                            .then(response => response.json())
                            .then(data => {
                                updateHealthDisplay(data.health);
                                if (data.status === 'game_over') {
                                    alert("Game Over! You lost.");
                                } else {
                                    alert("Wrong! You lost one life.");
                                }
                            });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert("An error occurred, please try again.");
                });
        });

        function loadNextWord() {
            fetch('/nextWord')
                .then(response => response.json())
                .then(data => {
                    document.getElementById('word-display').innerText = data.word;
                });
        }

        function updateHealthDisplay(health) {
            document.getElementById('health-left').innerText = health;
        }
    </script>
{% endblock %}